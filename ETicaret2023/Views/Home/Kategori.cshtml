@using ETicaret2023.Models
@model List<Urunler>

@{
    Kategoriler kat = (Kategoriler)ViewBag.kategori;
    ViewBag.Title = kat.KategoriAdi;
}

<div class="jumbotron">
    <h1>ASP.NET MVC ETicaret Projesi</h1>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Kategoriler</h2>
        <ul style="list-style:none">
            @foreach (var item in (List<Kategoriler>)ViewBag.Kategoriler)
            {
                <li>
                    @Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID }, new {@class="btn btn-default"})<br /><br />
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <h2>Ürünler</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4" style="width: 40%; height: 40%">
                    <div class="thumbnail">
                        <h5>@item.UrunAdi</h5>
                        <img src="~/Resim/@(@item.UrunID+".jfif")" style="width:30%;height:30%" />
                    </div>
                    <div style="border">
                        <p>
                            <a href="/Home/Urun/@item.UrunID" class="btn btn-success">
                                Ürün Detay &raquo;
                            </a>
                            <span style="float:right;color:purple;font-size:medium">@item.UrunFiyati TL</span>
                        </p>
                    </div>
                    <div class="col-md-2">

                    </div>

                </div>
            }
        </div>
    </div>
</div>